<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:gravity="center_horizontal"
        android:text="add"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/name_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="name" />

    <EditText
        android:id="@+id/quantity_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="quantity" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:gravity="center"
            android:text="unit"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/unit_minus_btn"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_unit_minus_false" />

        <TextView
            android:id="@+id/unit_txt_view"
            android:layout_columnWeight="2"
            android:layout_gravity="fill"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/unit_plus_btn"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_unit_plus_true" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="cancel"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/add_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="ok"
            android:textColor="#ffffff" />
    </GridLayout>
</LinearLayout>